<div class="col-md-12 overflow">

    <section class="col-md-10 d-inline-block float-left">
        <h3 class="pt-2">Cykler</h3>

        <hr>
        <% info.forEach(infos => { %>
            <img src="/img/Cykler/<%= infos.cykel_billede %>" alt="Cykel Billede" class="col-md-4 float-left">
            <h6>
                <%= infos.cykel_navn %>
            </h6>
            <section class="col-md-8 float-left padding-t1 pt-4">
                <p>
                    <%= infos.cykel_beskrivelse %>
                </p>
                <p class="pt-5 mb-0">Pris:
                    <%= infos.cykel_pris %> Kr.</p>
            </section>
            <% }) %>
                <div class="col-md-12 padding-l1 d-inline-block">
                    <h5 class="pt-2">Farve:</h5>
                    <div>
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_1.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_2.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_3.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_4.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_5.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_6.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_7.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_8.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_9.jpg" alt="Cykel farve">
                        <img class="col-md-1 p-1" src="/img/Cykelfarver/cykelfarve_10.jpg" alt="Cykel farve">
                    </div>
                </div>




    </section>

    <h3 class="pl-3 pt-2">Tilbud</h3>
    <hr>
    <% produkter.forEach(produkt => { %>
        <aside class="col-md-2 float-left border mb-1">
            <p class="m-0">
                <%= produkt.tilbud_navn %>
            </p>
            <img src="/img/Cykler/<%= produkt.tilbud_billede %>" alt="Cykel Billede" class="w-50">
            <!-- <p class="m-0">FÃ¸r: </p> -->
            <p class="mt-2">Nu kun
                <%= produkt.tilbud_pris %> Kr.</p>
        </aside>
        <% }) %>


            &nbsp;
</div>