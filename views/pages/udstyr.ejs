<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
    <title>City Cykler</title>
</head>

<body>
    <div class="col-md-8 offset-md-2">
        <div class="row">
            <div class="divRound">

                <header class="nav-scroller col-md-12 p-0">
                    <% include ../partials/header.ejs %>
                </header>

                <main>
                    <div class="col-md-12 m-0 p-0">
                        <section class="col-md-10 d-block">
                            <div class="float-left">

                                <h3 class="pl-3 pt-3">Udstyr</h3>

                                <hr class="mb-3 mt-3">

                                <% udstyrKategori.forEach(udstyr => { %>
                                    <div class="col-md-3 ml-5 mt-5 alignCenter">
                                        <h6>
                                            <a class="" href="/alleUdstyrKategori/<%= udstyr.udstyrkategori_id %>">
                                                <%= udstyr.udstyrkategori_navn %>
                                            </a>
                                        </h6>
                                        <img class="col-md-11" src="/img/Udstyrkategorier/<%= udstyr.udstyr_billede %>" alt="Udstyr Billede">
                                    </div>
                                    <% }) %>

                            </div>


                        </section>

                        <div class="vl float-left ml-2"></div>

                        <div class="col-md-2 float-left p-1 pl-3 pr-3">
                            <h3 class="pl-3 pt-3">Tilbud</h3>
                            <hr class="m-2" style="width: 150px;">
                            <% produkter.forEach(produkt => { %>
                                <div class="border mb-2">
                                    <p>
                                        <%= produkt.tilbud_navn %>
                                    </p>
                                    <img src="/img/Cykler/<%= produkt.tilbud_billede %>" alt="Cykel Billede" class="w-50">

                                    <p>Nu kun
                                        <%= produkt.tilbud_pris %> Kr.</p>
                                </div>
                                <% }) %>
                        </div>

                    </div>
                </main>




                <footer class="blog-footer clearfix">
                    <% include ../partials/footer.ejs %>
                </footer>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                    crossorigin="anonymous">
                    </script>
                <!-- <script src="js/product.js"></script> -->
            </div>
        </div>
    </div>

</body>

</html>